<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_selected_car_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9e9e9"
    android:weightSum="6"
    tools:context="com.example.xcomputers.avtovozbg.SelectedCarInfoActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:id="@+id/scrollView"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollViewLL">


        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#cecece"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_weight="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/model_and_brand"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="Audi A4,18,TFSI Ambiente"
                android:textColor="@android:color/black"
                android:layout_weight="0.9">

            </TextView>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:id="@+id/call_us"
                android:background="@drawable/call_us"
                android:layout_weight="0.15"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColorHint="@android:color/white"
                android:textSize="25sp"
                android:gravity="bottom"
                android:hint="Horse Power:"
                android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/horse_power"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:text="125"
                    android:layout_weight="1"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:hint="Kilometers"
                    android:gravity="bottom"

                    android:textColorHint="@android:color/white"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/kilometers"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:text="213321 km"
                    android:layout_weight="1"/>



            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColorHint="@android:color/white"
                android:textSize="25sp"
                android:gravity="bottom"
                android:hint="Color:"
                android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:text="silver"
                    android:id="@+id/color"
                    android:layout_weight="1"/>






            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="195dp"
                    android:layout_height="0dp"
                    android:textColorHint="@android:color/white"
                    android:textSize="25sp"
                    android:gravity="bottom"

                    android:hint="Produced in:"
                    android:layout_weight="0.99"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/producedYear"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:text="1996"
                    android:layout_weight="1"/>



            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:textColorHint="@android:color/white"
                    android:textSize="25sp"
                    android:hint="Description:"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:id="@+id/price"
                    android:lines="1"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:text="Price:"
                    android:layout_weight="2"/>



            </LinearLayout>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/description"
                    android:gravity="top"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:text="mnogo qka kola fyrka s 300-ta:"
                 />

            </ScrollView>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
